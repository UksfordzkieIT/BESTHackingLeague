@model EkoApp.ViewsModel.FuelBillToEdit

<h4 class="text-center text-white">Edit Post</h4>
<hr />

<div class="col-12 border pt-3 bg-white">
    <form asp-controller="FuelBill" asp-action="Update" asp-route-billId="@Model.Id.ToString()" method="post" class="form-group col-12">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="input-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="@Model.TotalPrice" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.TotalPrice" class="form-control" />
                </div>
                <span asp-validation-for="@Model.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="@Model.Volume" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.Volume" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Volume" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="btn-group col-6 offset-3 mb-1">
                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i></button>
                </div>
            </div>
        </div>

    </form>

</div>
<div>
    <a asp-controller="Profile" asp-action="Index" class="text-white float-right mt-2">Back to profile</a>
</div>
