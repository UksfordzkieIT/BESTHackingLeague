@model RegisterViewModel

@{
    Layout = "_NoSignInLayout";
    ViewData["Title"] = "Register";
}

<div class="col-12 justify-content-center">
    <h1 class="offset-5 col-2 text-center rounded pb-2 " style="background-color:white">
        Register
    </h1>
</div>

<hr />
<div class="row">
    <div class="col-12 p-3 mt-5">
        <form asp-action="Register" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="Login" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Login" class="form-control" />
                </div>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="FirstName" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="LastName" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="Email" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="Password" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="ConfirmPassword" class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="btn-group col-6 offset-3">
                    <input type="submit" class="btn btn-success" value="Register" />
                    &nbsp;
                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success">Login</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
