@model LoginViewModel

@{
    Layout = "_NoSignInLayout";
    ViewData["Title"] = "Sign In";
}

<div class="col-12 justify-content-center">
    <h1 class="offset-5 col-2 text-center rounded " style="background-color:white">
        Sign In
    </h1>
    </div>

<hr />
<div class="row">
    <div class="col-12 p-3 mt-5">
        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="Login"  class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Login" class="form-control" />
                </div>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3 text-center">
                    <label asp-for="Password"  class="control-label h5 p-2 rounded" style="background-color:white"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="btn-group col-6 offset-3 mb-1">
                    <input type="submit" class="btn btn-success text-center" value="Login" />
                    &nbsp;
                    <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-success text-center">Register</a>

                </div>
            </div>
            <a asp-controller="Account" asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl" class="offset-7 ">Forgot password?</a>
        </form>
    </div>
</div>

